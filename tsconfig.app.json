{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["custom.d.ts", "env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
  }
}
